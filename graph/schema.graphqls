type Post {
  title: String!
  content: String!
  writer: Person!
  uuid: String!
  keywords: [Keyword!]!
}

type Person {
  name: String!
  uuid: String!
  keywords: [Keyword!]!
}

type Keyword {
  value: String!
  usages: Int!
}

type Query {
  posts: [Post!]!
  keywords: [Keyword!]!
}

input NewPost {
  title: String!
  content: String!
  writerUuid: String!
  keywords: [String!]!
}

input NewPerson {
  name: String!
}

input SetKeywords {
  uuids: [String]!
  keywords: [String!]!
  exclusive: Boolean!
}

union KeywordLink = Person | Post

type Mutation {
  createPerson(input: NewPerson!): Person!
  createPost(input: NewPost!): Post!
  setKeywords(input: SetKeywords!): [KeywordLink!]!
}
